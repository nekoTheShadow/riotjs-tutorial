<app>
  <div class="app-header">
    <img src="https://riot.js.org/img/logo/riot-logo.svg" alt="Riot.js logo" class="logo">
  </div>
  <h1>{props.title}</h1>
  <ul>
    <li><su-checkbox>Make my profile visible</su-checkbox></li>
    <li><su-checkbox class="disabled">Disable</su-checkbox></li>
    <li><su-checkbox class="slider">Accept terms and conditions</su-checkbox></li>
    <li><su-checkbox class="toggle" checked={isChecked} onchange={handleChange}>Subscribe to weelky newsletter</su-checkbox></li>
    <div class="ui message">
      <p>{isChecked ? 'on' : 'off'}</p>
    </div>
  </ul>
  
  <script>
    export default {
      isChecked: false,
      onBeforeMount(props, state){},
      handleChange(e) {
        this.isChecked = e.target.checked;
        this.update()
      }
    }
  </script>
  <style>
    :host {
      padding: 2rem
    }
  </style>
</app>